<div class="time_form">

	<div class="quote-banner">
		<h3>At what time did you leave?</h3>
	</div>

	<% if @todays_activity.errors.any? %>
		<div class="row errors"><%= @todays_activity.errors[:end_time].join('') %></div>
	<% end %>

	<div class="row">
		<%= form_for(@todays_activity, html: {class: 'todays_time'}, remote: true) do |f| %>
			<%= f.text_field :end_time %>
			<%= f.submit "Check Out", class: 'checkout' %>
		<% end %>
	</div>

</div>