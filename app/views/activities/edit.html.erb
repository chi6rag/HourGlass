<div class="activities">
	<h1><%= @todays_activity.created_at.strftime('%A, %d %B, %Y') %></h1>
</div>

<% if @todays_activity.start_time == nil %>
	<%= render partial: 'activities/start_form' %>
<% elsif @todays_activity.end_time == nil %>
	<%= render partial: 'activities/end_form' %>
<% else %>
  <%= render partial: 'activities/result' %>
<% end %>

<footer>
	<%= link_to "History", history_path %>
</footer>