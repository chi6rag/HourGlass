<div class="time_form">
		
	<div class="quote-banner">
		<h3>At what time did you come today?</h3>
	</div>

	<% if @todays_activity.errors.any? %>
		<div class="row errors"><%= @todays_activity.errors[:start_time].join('') %></div>
	<% end %>

	<%= form_for(@todays_activity, html: {class: 'todays_time'}, remote: true) do |f| %>
		<%= f.text_field :start_time %>
		<div class="btn-group">
		<%= f.submit "Check In", class: 'checkin' %>
		</div>
	<% end %>

</div>