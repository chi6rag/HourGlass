<div class="static_pages_home">
  <div class="form">
      <%= form_for(:user, :url => session_path(:user)) do |f| %>
        <h2 class="hidden">Login</h2>
        <h2>Have an account? Sign in</h2>
        <%= f.text_field :email, class: 'input', placeholder: 'Username' %>
        <%= f.password_field :password, class: 'input', placeholder: 'Password' %>
        <%= f.check_box :remember_me, class: 'check-box' %>
        <%= f.label :remember_me %>
        <%= f.submit "Login", class: 'submit' %>
      <% end %>

      <div class="recovery-links">
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Sign up", new_registration_path(resource_name) %>
        <% end -%>
        &nbsp;
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name) %>
        <% end %>
      </div>

    </div>
</div>