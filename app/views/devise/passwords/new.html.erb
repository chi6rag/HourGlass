<div class="user_login">
  
  <div class="row login-row">

    <div class="container-fluid">
      <!-- div.login-form -->
      <div class="login-form col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <h2 class="hidden">Reset Password</h2>
          <h2>Reset Password</h2>
          <%= devise_error_messages! %>
          <br />
          <div class="form-group">
            <div class="col-sm-10 col-sm-offset-1">
              <%= f.text_field :email, class: 'form-control', placeholder: 'youremail@example.com', autofocus: true %>
            </div>
          </div>
          <br /><br /><br />
          <div class="form-group login-button-row">
				    <button type="submit" class="btn btn-default">Send Instructions</button>
				  </div>
        <% end %>
        
        <!-- div.recovery-links -->
        <div class="recovery-links">
					<%- if controller_name != 'sessions' %>
					  <%= link_to "Log in", new_session_path(resource_name), class: 'reset-password pull-left' %>
					<% end -%>
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "New Here? Sign Up", new_registration_path(resource_name), class: 'signup-link pull-right' %>
          <% end -%>
        </div>
        <!-- /div.recovery-links -->

      </div>
      <!-- /div.login-form -->
    </div>

  </div>

</div>