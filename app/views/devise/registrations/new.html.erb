<div class="user_sign_up">
  
  <div class="row login-row">

    <div class="container-fluid">
      <!-- div.login-form -->
      <div class="login-form col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">

        <%= form_for(:user, :url => registration_path(:user), html: {class: 'form-horizontal'}) do |f| %>
          <h2 class="hidden">Login</h2>
          <h2>New Here? Sign Up</h2>
            <%= devise_error_messages! %>
            <br />
          <div class="form-group">
            <div class="col-sm-10 col-sm-offset-1">
              <%= f.text_field :email, class: 'form-control', placeholder: 'Your Name' %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-10 col-sm-offset-1">
              <%= f.text_field :email, class: 'form-control', placeholder: 'youremail@example.com' %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-10 col-sm-offset-1">
              <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-10 col-sm-offset-1">
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm Password', autocomplete: "off" %>
            </div>
          </div>
          <div class="form-group login-button-row">
              <button type="submit" class="btn btn-default">Sign Up</button>
          </div>
        <% end %>
        
        <!-- div.recovery-links -->
        <div class="recovery-links">
        <%- if controller_name != 'sessions' %>
          <%= link_to "Log in", new_session_path(resource_name), class: 'signup-link pull-left' %><br />
        <% end -%>
        </div>
        <!-- /div.recovery-links -->

      </div>
      <!-- /div.login-form -->
    </div>

  </div>

</div>